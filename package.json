{
	"name": "pyinit",
	"displayName": "PyInit",
	"description": "Automatic generation of python __init__.py files",
	"version": "1.0.0",
	"publisher": "DiogoNolasco",
	"engines": {
		"vscode": "^1.36.0"
	},
	"author": {
		"name": "Diogo Nolasco"
	},
	"categories": [
		"Formatters",
		"Other"
	],
	"keywords": [
		"python",
		"init",
		"generator"
	],
	"icon": "images/piinit_icon.png",
	"activationEvents": [
		"onCommand:extension.generateInit"
	],
	"main": "./dist/extension",
	"contributes": {
		"commands": [
			{
				"command": "extension.generateInit",
				"title": "Generate Init",
				"when": "false"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder",
					"command": "extension.generateInit",
					"group": "navigation"
				}
			]
		},
		"keybindings": [
			{
				"command": "extension.generateInit",
				"key": "ctrl+i",
				"mac": "cmd+i",
				"when": "explorerResourceIsFolder"
			}
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/diogonfs/pyinit.git"
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.17.19",
		"@types/vscode": "^1.44.0",
		"glob": "^7.1.6",
		"mocha": "^6.2.3",
		"ts-loader": "^7.0.0",
		"tslint": "^5.20.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"webpack": "^4.42.1",
		"webpack-cli": "^3.3.11"
	}
}
